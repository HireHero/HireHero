{
  "name": "hirehero-app",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "cross-env NODE_ENV=production ts-node server/index.ts",
    "build": "vite build",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "vite",
    "server:dev": "nodemon --exec ts-node server/index.ts",
    "preview": "vite preview",
    "test": "jest --verbose",
    "watch": "jest --watch"
  },
  "dependencies": {
    "@types/express": "^4.17.15",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "nodemon": "^2.0.20",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.5.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vitest": "^0.26.0"
  }
}
